
<div class="container">
	<div class="row">
		<div class="col"><button class="btn btn-primary" (click)="counter('minus')">--</button></div>
		<div class="col"><p class="value">{{count}}</p></div>
		<div class="col"><button class="btn btn-primary" (click)="counter('plus')">++</button></div>
	</div>
</div>

  count=0;

  counter(type:string){
    if(type==='plus'){
     this.count++; 
    }
    else if(type==='minus'){
      this.count--;
    }

  }
