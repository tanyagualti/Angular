color="red";
<div class="container">
	<ng-template [ngIf]="color==='red'">
		<h1>red</h1>
	</ng-template>
	<ng-template [ngIf]="color==='green'">
		<h1>green</h1>
	</ng-template>
	<ng-template [ngIf]="color==='blue'">
		<h1>blue</h1>
	</ng-template>
</div>

