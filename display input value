// display input value through button
<input type="text" #box  name="Username" placeholder="event types">
<button (click)="getData(box.value)">click</button>
<p>{{ displayVal }}</p>
  
displayVal='';
getData(box:string){
  console.warn(box);
  this.displayVal=box;
}
